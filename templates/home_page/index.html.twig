{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block head %}
    <meta charset="UTF-8">
    <title>Tutti Frutti</title>
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.1.1/css/all.css">
    {% endblock %}
{% endblock%}

{% block body %}
<header>
<div class="menu">
    <img alt="user icon"/>
    {% for link in menu %}
        <a href="{{link.url}}">
            {{link.name}}
        </a>
        
    {% endfor %}
</div>

</header>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>D:/sites/dev avancé/TuttiFrutti/src/Controller/HomePageController.php</code></li>
        <li>Your template at <code>D:/sites/dev avancé/TuttiFrutti/templates/home_page/index.html.twig</code></li>
    </ul>
</div>


<main class="top-section">
    <ul class="nav-page">
    </ul>

    <section class="top-section">
        <h1>TUTTI FRUTTI</h1>
    </section>

    <section class="mid-section">
        <h2>Choose random fruit with fruit salad !</h2>
    </section>
    <section class="bot-section">
        <div class="d-flex align-items-center justify-content-center vh-100 flex-column gap-4">
            <form class="d-flex">
                {{ form_start(form) }}
                <button class="btn btn-primary" type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
                {{ form_end(form) }}
            </form>
        </div>
    </section>
    
</main>



{% endblock %}
